<% if flash[:notic] %>
  <p><%= flash[:notic] %></p>
<% end %>

<h3>Books</h3>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr> 
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to "show", book_path(book.id) %>
          <%= link_to "edit", edit_book_path(book.id) %>
          <%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
        </td>
      </tr>  
    <% end %>
  </tbody>   
</table>


  

<h3>New book</h3>
  <%= form_with model: @book, local: true do |f| %>
    <% if @book.errors.any? %>
      <p><%= @book.errors.count %>error prohibited this book from being saved:</p>
      <% @book.errors.full_messages.each do |book| %>
        <%= book %>
      <% end %>
    <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br><%= f.submit "Create Book" %></br>
  <% end %>